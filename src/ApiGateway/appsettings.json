{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "identity-api",
    "Audience": "api-gateway",
    "SigningKey": ""
  },
  "ReverseProxy": {
    "Routes": {
      "apiservice-route": {
        "ClusterId": "apiservice-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/service" }
        ]
      },
      "identity-route": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "Anonymous",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "apiservice-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://apiservice/"
          }
        }
      },
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://identity-api/"
          }
        }
      }
    }
  }
}
