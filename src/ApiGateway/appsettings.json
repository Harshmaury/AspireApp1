{
  "Logging": { "LogLevel": { "Default": "Information", "Microsoft.AspNetCore": "Warning" } },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "identity-api",
    "Audience": "api-gateway",
    "SigningKey": "dev-super-secret-signing-key-minimum-32-chars"
  },
  "ReverseProxy": {
    "Routes": {
      "apiservice-route": { "ClusterId": "apiservice-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/service/{**catch-all}" }, "Transforms": [ { "PathRemovePrefix": "/api/service" } ] },
      "identity-route": { "ClusterId": "identity-cluster", "AuthorizationPolicy": "Anonymous", "Match": { "Path": "/api/auth/{**catch-all}" } },
      "student-route": { "ClusterId": "student-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/students/{**catch-all}" } },
      "academic-departments-route": { "ClusterId": "academic-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/departments/{**catch-all}" } },
      "academic-programmes-route": { "ClusterId": "academic-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/programmes/{**catch-all}" } },
      "academic-courses-route": { "ClusterId": "academic-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/courses/{**catch-all}" } },
      "academic-curricula-route": { "ClusterId": "academic-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/curricula/{**catch-all}" } },
      "academic-calendars-route": { "ClusterId": "academic-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/academic-calendars/{**catch-all}" } },
      "examination-schedules-route": { "ClusterId": "examination-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/exam-schedules/{**catch-all}" } },
      "examination-marks-route": { "ClusterId": "examination-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/marks/{**catch-all}" } },
      "examination-results-route": { "ClusterId": "examination-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/results/{**catch-all}" } },
      "examination-halltickets-route": { "ClusterId": "examination-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/hall-tickets/{**catch-all}" } },
      "fee-structures-route": { "ClusterId": "fee-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/fee-structures/{**catch-all}" } },
      "fee-payments-route": { "ClusterId": "fee-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/fee-payments/{**catch-all}" } },
      "fee-scholarships-route": { "ClusterId": "fee-cluster", "AuthorizationPolicy": "default", "Match": { "Path": "/api/scholarships/{**catch-all}" } }
    },
    "Clusters": {
      "apiservice-cluster": { "Destinations": { "destination1": { "Address": "http://apiservice/" } } },
      "identity-cluster": { "Destinations": { "destination1": { "Address": "http://identity-api/" } } },
      "student-cluster": { "Destinations": { "destination1": { "Address": "http://student-api/" } } },
      "academic-cluster": { "Destinations": { "destination1": { "Address": "http://academic-api/" } } },
      "examination-cluster": { "Destinations": { "destination1": { "Address": "http://examination-api/" } } },
      "fee-cluster": { "Destinations": { "destination1": { "Address": "http://fee-api/" } } }
    }
  }
}
