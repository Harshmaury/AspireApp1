{
  "Auth": {
    "Authority": "http://identity-api:8080",
    "Audience": "api-gateway",
    "RequireHttpsMetadata": false
  },
  "Kestrel": {
    "Endpoints": {
      "Http":  { "Url": "http://+:8080" },
      "Https": {
        "Url": "https://+:8443",
        "Certificate": {
          "Path":     "/certs/ums-dev.pfx",
          "Password": "devcert"
        }
      }
    }
  },
  "Serilog": {
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Seq", "Args": { "serverUrl": "http://seq:5341" } }
    ]
  }
}
